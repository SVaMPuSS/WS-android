<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytelegram">

    <application
        android:allowBackup="true"
        android:icon="@drawable/meme"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_contacts"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTelegram">
        <activity android:name=".Chats.ChatsActivity"></activity>
        <activity android:name=".ChatActivity" />
        <activity android:name=".CallsActivity" />
        <activity android:name=".Contact.ContactsActivity" />
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>